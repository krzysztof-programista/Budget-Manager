{% extends 'base.twig' %}

{% block title %}Reset password
{% endblock %}

{% block footer %}
	<script src="/js/hideShowPassword.min.js"></script>
	<script src="/js/app.js"></script>

	<script>
		$(document).ready(function () { /**
             * Validate the form
             */
$('#formPassword').validate({
rules: {
password: {
required: true,
minlength: 6,
validPassword: true
}
}
});


/**
              * Show password toggle button
              */
$('#inputPassword').hideShowPassword({show: false, innerToggle: 'focus'});
});
	</script>

{% endblock %}


{% block body %}

	{% if user.errors is not empty %}
		<p>Errors:</p>
		<ul>
			{% for error in user.errors %}
				<li>{{ error }}</li>
			{% endfor %}
		</ul>
	{% endif %}

	<section class="light-colored-section" id="registration">

		<div class="registration-form">

			<form id="formPassword" action="/password/reset-password" method="post">

				<h2 class="text-center">Resetuj hasło</h2>

				<input type="hidden" name="token" value="{{ token }}"/>

				<div class="form-group">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text">
								<span class="fa fa-lock"></span>
							</span>
						</div>
						<input type="password" id="inputPassword" name="password" placeholder="Nowe hasło" required class="form-control"/>
					</div>
				</div>

				<div class="form-group">
					<button type="submit" class="sign-in-button btn btn-light">Zapisz</button>
				</div>

			</form>

		</div>
	</section>

{% endblock %}

