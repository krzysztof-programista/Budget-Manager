{% extends "base.twig" %}

{% block title %}Rejestracja

{% endblock %}

{% block body %}

    {% if user.errors is not empty %}
        <p>Errors:</p>
        <ul>
            {% for error in user.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <!-- Registration -->
    <section class="light-colored-section" id="registration">

        <div class="registration-form">
        
            <form action="/signup/create" method="post" id="formSignup">
                <h2 class="text-center">Rejestracja</h2>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <span class="fa fa-user"></span>
                            </span>
                        </div>
                        <input type="text" name="username" class="form-control" placeholder="Imię" required="required">
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <span class="fa fa-solid fa-envelope"></span>
                            </span>
                        </div>
                        <input type="email" name="email" class="form-control" placeholder="Email" required="required">
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>
                        <input type="password" name="password" class="form-control" placeholder="Hasło" required="required">
                    </div>
                </div>
    <!--  
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>
                        <input type="password" name="password_confirmation" class="form-control" placeholder="Powtórz hasło" required="required">
                    </div>
                </div>
    -->

                <div class="form-group">
                    <button type="submit" class="register-button-form btn btn-light">Zarejestruj się</button>
                </div>
            </form>
        </div>
    </section>

{% endblock %}
