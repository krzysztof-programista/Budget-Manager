{% extends "base.twig" %}

{% block title %}Logowanie
{% endblock %}

{% block body %}

	<!-- Registration -->
	<section class="light-colored-section" id="registration">
		<div class="registration-form">

			<form action="/login/create" method="post">
				<h2 class="text-center">Logowanie</h2>

				<div class="form-group">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text">
								<span class="fa fa-solid fa-envelope"></span>
							</span>
						</div>
						<input type="email" id="inputEmail" name="email"  autofocus value="{{ email }}" class="form-control" placeholder="Email" required="required">
					</div>
				</div>

				<div class="form-group">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text">
								<i class="fa fa-lock"></i>
							</span>
						</div>
						<input type="password" id="inputPassword" name="password" class="form-control" placeholder="Hasło" required="required">
					</div>
				</div>

				<div class="form-group">
					<div class="checkbox">
						<label>
							<input type="checkbox" name="remember_me" {% if remember_me %} checked="checked" {% endif %}/>
							Zapamiętaj mnie
						</label>
					</div>
				</div>

				<div class="form-group">
					<button type="submit" class="sign-in-button btn btn-light">Zaloguj się</button>
				</div>

				<div class="form-group">
					<a href="/password/forgot">Zapomniałem hasło</a>
				</div>

			</form>

		</div>
	</section>

{% endblock %}

